 <h1> All of the Meals </h1> 

 <%= link_to 'Create Meal', new_meal_path(@meal) %>

<ul>
  <% @meals.each do |meal| %>
    <% if current_user.admin %>
      <li><%= link_to "Edit #{meal.name}", meal_path(meal) %></li>
    <% else %>
      <li><%= link_to "View #{meal.name}", meal_path(meal) %></li>
    <% end %>
  <% end %>
</ul>