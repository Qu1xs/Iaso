  <h2>All of the Foods</h2>

  <%= link_to 'Create Food', new_food_path(@food) %>
  
  <br>

<%= form_tag(foods_path, method: :get) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag %>
<% end %>

<ul>
  <% @foods.each do |food| %>
    <% if current_user.admin %>
      <li><%= link_to "Edit #{food.name}", food_path(food) %></li>
    <% else %>
      <li><%= link_to "#{food.name.titleize}", food_path(food) %></li>
    <% end %>
  <% end %>
</ul>