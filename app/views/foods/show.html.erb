  <ul>
  <li>Name: <%= @food.name %></li>
  <li>Tickets: <%= @food.tickets %></li>
  <li>Nausea Rating: <%= @food.nausea_rating %></li>
  <li>Happiness Rating: <%= @food.happiness_rating %></li>
  <li>Minimum Height: <%= @food.min_height %></li>
