<%= render partial:'/shared/errors', locals: {obj: @user} %>

<%= form_for @user do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>

  <%= f.label :password %> <br>
  <%= f.password_field :password %> <br>

  <%= f.label :password_confirmation %> <br>
  <%= f.password_field :password_confirmation %> <br>
  
  <%= f.label :email %> <br>
  <%= f.email_field :email %><br>

  <%= f.label :height %>
  <%= f.number_field :height, in: 0..300, step: 1%> <br>

  <%= f.label :weight %>
  <%= f.number_field :weight, in: 0..1000, step: 1%> <br>

  <%= f.submit %>
<% end %>